{
  "expo": {
    "name": "Thankly",
    "slug": "gratitude-diary",
    "version": "1.2.0",
    "description": "Your personal gratitude journal with AI",
    "locales": {
      "zh": {
        "displayName": "感记",
        "description": "用心记录,感恩生活"
      },
      "en": {
        "displayName": "Thankly",
        "description": "Gratitude journaling made simple"
      }
    },
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "userInterfaceStyle": "light",
    "updates": {
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/2b3c207c-899e-45be-8e1f-ee728ea89faa"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "splash": {
      "image": "./assets/splash-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FAF6ED"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.stillkindailab.gratitudediary",
      "buildNumber": "6",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need microphone access for voice journaling.",
        "NSCameraUsageDescription": "We need camera access to take photos for your diary entries.",
        "NSPhotoLibraryUsageDescription": "We need photo library access to select photos for your diary entries.",
        "NSFaceIDUsageDescription": "Use Face ID to sign in quickly.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "audio",
          "remote-notification"
        ]
      }
    },
    "android": {
      "versionCode": 6,
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon.png",
        "backgroundColor": "#FAF6ED"
      },
      "package": "com.stillkindailab.gratitudediary",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "myapp",
    "plugins": [
      "expo-apple-authentication",
      "expo-secure-store",
      "expo-localization",
      "expo-font",
      "expo-asset",
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to let you select images for diary entries.",
          "cameraPermission": "The app needs access to your camera to let you take photos for diary entries."
        }
      ],
      "expo-audio",
      "@react-native-community/datetimepicker",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#E56C45",
          "sounds": []
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "lintOptions": {
              "checkReleaseBuilds": false,
              "abortOnError": false,
              "disable": ["ExtraTranslation"]
            }
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "2b3c207c-899e-45be-8e1f-ee728ea89faa"
      }
    },
    "owner": "dianadeng"
  }
}
